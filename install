#!/usr/bin/env bash

cp ~/dots/.profile ~/.profile
cp ~/dots/.vimrc ~/.vimrc
cp ~/dots/.gitignore ~/.gitignore
cp ~/dots/.irbrc ~/.irbrc
cp ~/dots/.my.cnf ~/.my.cnf

mkdir -p ~/.vim/autoload ~/.vim/bundle
curl -LSso ~/.vim/autoload/pathogen.vim https://tpo.pe/pathogen.vim

cp ~/dots/.vim/update_bundles ~/.vim/update_bundles
~/.vim/update_bundles

cd ~
# Download git-autocomplete
curl https://github.com/git/git/raw/master/contrib/completion/git-completion.bash -OL -o ~/git-completion.bash
curl https://github.com/git/git/raw/master/contrib/completion/git-prompt.sh -OL -o ~/git-prompt.sh

# Install ctags hooks into git template. These will be added to new repos and cloned repos. Existing repos should call `git init`.
mkdir -p ~/.git_template/hooks
cp -R ~/dots/git/hooks ~/.git_template/hooks

